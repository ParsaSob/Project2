
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // A user can read their own document.
      allow read: if request.auth != null && request.auth.uid == userId;

      // A user can create their own document.
      // We also validate that the 'uid' field in the new document matches their auth uid.
      allow create: if request.auth != null && request.auth.uid == userId
                    && request.resource.data.uid == request.auth.uid;

      // A user can update their own document.
      allow update: if request.auth != null && request.auth.uid == userId;

      // Users cannot delete their own profile through the client for safety.
      allow delete: if false;
    }
  }
}

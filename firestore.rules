
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read, create, and update their own document in the 'users' collection.
    // They cannot delete their own profile or see other users' profiles.
    match /users/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Disallow deleting profiles for now
    }
  }
}

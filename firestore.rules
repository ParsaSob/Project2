rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // This is a permissive rule for development, as suggested by the troubleshooting guide.
    // It allows any authenticated user to read and write to any document.
    // For production, you should implement more granular rules.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
